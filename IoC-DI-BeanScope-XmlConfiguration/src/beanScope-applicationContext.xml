<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xmlns:context="http://www.springframework.org/schema/context"
     xsi:schemaLocation="http://www.springframework.org/schema/beans 
     
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<!-- Define your beans here -->

	<!-- Define dependency injection -->

	<bean id="myFortune" 
		class="com.iris.springdemo.HappyFortuneService">
	</bean>



<!-- ***********	PROTOTYPE SCOPE BEAN	********** -->

	<!-- <bean id="myCoach" 
		class="com.iris.springdemo.BaseballCoach"		
		scope="prototype">	 -->	<!-- new object for each request in PROTOTYPE scope -->


<!-- *************	  SINGLETONE TYPE BEAN		************** -->

	<bean id="myCoach" 
		class="com.iris.springdemo.BaseballCoach">	<!-- by default the scope of the bean is SINGLETON (only one instance) -->

		<!-- set up constructor injection -->
		<constructor-arg ref="myFortune" />

	</bean>
   
     
</beans>